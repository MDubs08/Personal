    </div>
    <!-- Start Game Menu -->
    <div class="menu-nav hide" id="game-menu-start">
        <button class="btn-circle btn-pulse menu-back-button" id="back-button" type="button" onclick="showGameMenu(this)">
            <i class="fas fa-chevron-left"></i>
        </button>
        <h1 class="menu-title">Choose a table</h1>
        <ul class="menu-options game-tables">
            @foreach (var table in Model)
            {
                <li class="menu-option game-table" id="@table.Type">
                    <table class="table-description text-center">
                        <tbody>
                            <tr>
                                <td class="table-name" colspan="2">@table.Name</td>
                            </tr>
                            <tr>
                                <td class="table-type">@table.Type</td>
                            </tr>
                            <tr>
                                <td class="table-players">Players: <span>@table.Players.Count()</span> / @table.MaxPlayers</td>
                                <td class="table-betlimit">@table.BetLimit</td>
                            </tr>
                            <tr>
                                <td class="table-bet" id="small-blind">Small Blind: <span>@table.MinBet</span></td>
                                <td class="table-bet" id="big-blind">Big Blind: <span>@table.MaxBet</span></td>
                            </tr>
                        </tbody>
                    </table>
                    @Html.ActionLink("Join", "Table", "Games", table, new { @class="btn-pulse button-join-table", @id="join-table" })
                    @*<button class="btn-pulse button-join-table" id="join-table" type="button">Join</button>*@
