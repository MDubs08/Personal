    <div class="menu-nav" id="game-menu">
        <h1 class="menu-title">Game Time</h1>
        <ul class="menu-options">
            <li class="menu-option">
                <button class="menu-button btn-pulse" id="menu-start" type="button">Start</button>
            </li>
            <li class="menu-option">
